<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryLight"
    android:gravity="center"
    android:paddingTop="48dp"
    android:paddingBottom="16dp">

        <!-- Imagen de usuario -->
        <ImageView
            android:id="@+id/imagenUsuario"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/imagen_de_perfil_del_usuario"
            android:src="@mipmap/ic_appnotas_foreground"
            android:importantForAccessibility="no" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/selector_de_opciones"
            android:textAlignment="center"
            app:popupTheme="@style/ThemeOverlay.Material3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagenUsuario"/>

</androidx.constraintlayout.widget.ConstraintLayout>
